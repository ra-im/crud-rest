<% for (var i = 0; i < users.length; i++) {%> 

<tr>
    <td><%= i + 1 %></td> <!--for the id-->
    <td><%= users[i].name %></td> <!--for the username-->
    <td><%= users[i].email %></td> <!--for the email-->
    <td><%= users[i].gender %></td> <!--for the gender-->
    <td><%= users[i].status %></td> <!--for the status-->
    <td>
        <a href="/update-user?id=<%= users[i]._id %> " class="btn border-shadow update">
            <span class="text-gradient"><i class="fa fa-pencil"></i></span>
        </a>
        <a class="btn border-shadow delete" userId = <%= users[i]._id %>>
            <span class="text-gradient"><i class="fa fa-trash"></i></span>
        </a>
    </td>
</tr>

<%  }%> 